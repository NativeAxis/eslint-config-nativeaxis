{
  "extends": ["eslint:recommended", "plugin:react/recommended"],
  "env": {
    "browser": true,
    "node": true,
    "jasmine": true,
    "es6": true
  },
  "parser": "babel-eslint",
  "parserOptions": {
    "echmaVersion": 6,
    "sourceType": "module",
    "ecmaFeatures": {
      "jsx": true
    }
  },
  "plugins": ["react", "lodash"],
  "settings": {
    "react": {
      "version": "0.14"
    }
  },
  "rules": {
    "block-spacing": 2,
    "brace-style": 2,
    "camelcase": 0,
    "comma-style": 2,
    "complexity": [2, 8],
    "curly": 2,
    "dot-notation": 2,
    "dot-location": [2, "property"],
    "eqeqeq": 2,
    "indent": [2, 2],
    "eol-last": 2,
    "jsx-quotes": 2,
    "key-spacing": 2,
    "max-depth": [2, 2],
    "max-len": [2, 140, 2],
    "max-nested-callbacks": [2, 4],
    "no-mixed-spaces-and-tabs": [2, "smart-tabs"],
    "no-trailing-spaces": 2,
    "no-use-before-define": 2,
    "no-undef": 2,
    "no-unused-vars": 2,
    "no-unused-expressions": 2,
    "no-lonely-if": 2,
    "no-nested-ternary": 2,
    "no-unneeded-ternary": 2,
    "no-var": 2,
    "prefer-const": 2,
    "quotes": [2, "single"],
    "space-before-blocks": 2,
    "space-before-function-paren": 2,

    "react/jsx-pascal-case": 2,
    "react/jsx-no-bind": 2,
    "react/jsx-max-props-per-line": [2, { "maximum": 2 }],
    "react/jsx-closing-bracket-location": 2,
    "react/jsx-indent": [2, 2],
    "react/jsx-indent-props": [2, 2],
    "react/jsx-first-prop-new-line": [2, "multiline"],
    "react/no-unknown-property": 2,
    "react/no-multi-comp": 2,
    "react/prefer-es6-class": 2,
    "react/prefer-stateless-function": 2,
    "react/self-closing-comp": 2,
    "react/sort-comp": 2,
    "react/jsx-wrap-multilines": 2,

    "lodash/callback-binding": 2,
    "lodash/unwrap": 2,
    "lodash/no-double-unwrap": 2,
    "lodash/collection-return": 2,
    "lodash/no-extra-args": 2,
    "lodash/chaining": [2, "always"],
    "lodash/prop-shorthand": 2,
    "lodash/matches-prop-shorthand": 2,
    "lodash/identity-shorthand": 2,
    "lodash/preferred-alias": 2,
    "lodash/prefer-map": 2,
    "lodash/prefer-reject": 2,
    "lodash/prefer-filter": 2,
    "lodash/prefer-compact": 2,
    "lodash/prefer-constant": 2,
    "lodash/prefer-is-nil": 2,
    "lodash/prefer-startswith": 2,
    "lodash/prefer-matches": 2,
    "lodash/prefer-times": 2
  }
}
